{
  "name": "mcpli",
  "version": "0.3.0",
  "type": "module",
  "description": "Transform stdio-based MCP servers into a firstâ€‘class CLI tool",
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "cli",
    "tools",
    "agent",
    "command-line"
  ],
  "author": "Cameron Cooke",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cameroncooke/mcpli.git"
  },
  "homepage": "https://github.com/cameroncooke/mcpli",
  "bugs": {
    "url": "https://github.com/cameroncooke/mcpli/issues"
  },
  "bin": {
    "mcpli": "dist/mcpli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx tsup",
    "dev": "npm run build",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "format:check": "prettier --check 'src/**/*.{js,ts}'",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:unit": "vitest --run tests/unit",
    "test:integration": "vitest --run tests/integration",
    "test:e2e": "vitest --run tests/e2e",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "socket-activation": "^3.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
